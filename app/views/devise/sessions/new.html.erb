<h2 class="login-welcome"><%= t '.login_welcome' %></h2>

<div class="login-backsplash">

  <div class="login-form">
    <div class="login-header">
      <span>
        <h3><%= t '.login_header.title' %></h3>
      </span>
      <span>
        <p>
          <%= t '.login_header.body' %>
        </p>
      </span>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, label: 'Username', autofocus: true, autocomplete: 'email' %>

      <%= f.input :password, autocomplete: 'current-password' %>

      <div class="actions text-center">
        <%= f.submit t('.login'), class: 'btn btn-wide btn-primary' %>
        <span onclick="password_reset();" class='passreset text-danger'><%= t('.password_reset') %></span>
      </div>
    <% end %>
  </div>
</div>
<style type="text/css">
  .passreset{
    cursor: pointer;
  }
  .passreset:hover {
    text-decoration: underline;
  }
</style>
 <script type="text/javascript">
  function password_reset(){    
    window.location.href =  "<%= new_password_path(resource_name) %>";
  }  
</script>
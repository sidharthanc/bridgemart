<h2 class="login-welcome"><%= t '.edit_password_welcome' %></h2>

<div class="login-backsplash">

  <div class="login-form">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.input :password, autofocus: true, autocomplete: 'new-password', hint: "#{@minimum_password_length} characters minimum" %>

      <%= f.input :password_confirmation, autocomplete: 'off' %>

      <div class="actions">
        <%= f.submit t('.edit_password_confirm'), class: 'btn btn-gray btn-wide'  %>
      </div>
    <% end %>
  </div>
</div>
